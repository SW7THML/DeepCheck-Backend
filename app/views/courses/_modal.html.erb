<script type="text/javascript">
	$(function() {
	  $('#post_attachment').on('change', function(event) {
	    var files = event.target.files;
	    var image = files[0]
	    // here's the file size
	    console.log(image.size);
	    var reader = new FileReader();
	    reader.onload = function(file) {
	      var img = new Image();
	      img.src = file.target.result;
	      img.style.maxWidth = "100%";
	      img.style.height = "auto";
	      $('#thumbnail').html(img);
	      document.getElementById("submit").style.display="inline-block";
	    }
	    reader.readAsDataURL(image);
	    console.log(files);
	  });
	});
</script>

<!-- Modal -->
<%= form_for([@course, @course.posts.build], html: {id: "post-form"}) do |f| %>
	<div class="modal fade" id="modal-post" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title" id="myModalLabel">새로운 출석사진 올리기</h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<%= f.submit "등록", :class => "btn btn-primary", :id => "submit" %>
				</div>
				
				<div class="modal-body">
				  <div class="form-group">
		      	<%= f.label :created_at %>
						<%= f.date_select :created_at, class: "form-control"  %>
					</div>

					<div class="form-group">
						<%= f.label :attachment %>
						<%= f.file_field :attachment, class: "form-control"  %>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>

