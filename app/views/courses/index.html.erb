<div class="navigation-header" align="center">
  <h3>나의 강의목록</h3>
  <div class="menu menu-left">
    <form class="search form-horizontal">
      <i class="fa fa-search" aria-hidden="true"></i>
      <div class="search-input col-sm-4">
        <input type="text" class="form-control" id="search-input" placeholder="Class name to search">
      </div>
    </form>
  </div>
  <div class="menu menu-right">
    <%= link_to '', new_course_path, class: "fa fa-plus"%>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>Success!</strong> <%= flash[:notice] %>
  </div>
<% end %>

<div id="course-list">
  <% @courses.each_with_index do |course, index| %>
    <% if (index) % 3 == 0  %>   
      <div class="row course-row"></div>
    <% end %>

    <div class="col-md-4 course-div link">
      <%= link_to course_path(course) do %>
        <%= image_tag("images.png", :class => "img-circle index-img img-thumbnail") %>
          <p class="course-name link"><strong><%= course.name %></strong></p>
      <% end %>

      <% if (index) % 3 == 2  %>
      <% end %>
    </div>
  <% end %>
</div>