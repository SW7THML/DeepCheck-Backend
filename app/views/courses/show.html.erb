<div class="navigation-header" align="center">
  <div id="left-menu">
    <%= link_to '', courses_path, class: "btn-left btn-primary glyphicon glyphicon-triangle-left" %>
  </div>
  <h3><%= @course.name %></h3>
</div>

<% if @course.posts.blank? %>
  <div class="no-image">
    <%= image_tag("no-photo.png", :class => "show-non") %>
    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error: </span>
          사진을 추가해 주세요!
    </div>

    <p>
      <blockquote>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
        <footer>Someone famous in <cite title="Source Title">Source Title</cite></footer>
      </blockquote>
    </p>
  </div>

<% else %>
  <div class="posts">
    <% @course.posts.latest.each do |post| %>
      <div class="post" id="post-<%= post.id %>">
        <% post.photos.each do |photo| %>
          <div class="photo" id="photo-<%= photo.id %>">
            <div class="show-image panel-body">
              <a class="photo-detail-link" href="/courses/<%= @course.id %>/posts/<%= post.id %>" data-course-id="<%= @course.id %>"  data-post-id="<%= post.id %>" data-photo-id="<%= photo.id %>">
                <img class="photo show-image" src="<%= photo.attachment %>">
              </a>

              <div class="time-right taggednot">
                <% if @current_user.tagged?(photo)%>
                  <i class="fa fa-check" aria-hidden="true"></i>
                <% else %>
                  <i class="fa fa-times" aria-hidden="true"></i>
                <% end %>
                <%= post.created_at.strftime("%Y년 %m월 %d일") %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="content">
          <%= post.content %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<br>
<br>
<br>

<div>
  <%= render "modal" %>
    <a class="btn btn-primary btn-block btn-lg" id="btn-new-post" data-id="<%= @course.id %>">새로운 출석</a>
</div>

<div class="menu new-post">
</div>