<style type="text/css">
  #info {
    position: fixed;
    top: 50%;
    left: 50%;
  }
  #course {
    width: 200px;
    display: block;
    margin: 0 auto;
    margin-top: -100px;
    margin-left: -100px;
    float: none !important;
    text-align: center;
  }
  #course img {
    width: 180px;
  }
  #course p {
    font-size: 20px;
  }
  .course-name {
    text-align: center;
  }
</style>

<div id="info">
  <div id="course" class="course-div">
    <%= image_tag("course_icons/#{@course.icon_id}.png", :class => "img-circle index-img img-thumbnail") %>
    <p class="course-name link"><strong><%= @course.name %></strong></p>
  </div>
</div>

<div>
  <%= link_to "조인하기", join_course_path(@course), :class => "btn btn-primary btn-block btn-lg", :id => "btn-new-post" %>
</div>
