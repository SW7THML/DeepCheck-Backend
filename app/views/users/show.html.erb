<div class="navigation-header" align="center">
  <div class="menu menu-left">
    <%= link_to '', courses_path, class: "ionicons ion-ios-arrow-back" %>
  </div>
  <h1><%= @user.name %></h1>
</div>

<div class="profile">
  <div class="header">
    <div class="img-circle">
      <% if f = @user.faces.first %>
        <%= image_tag f.attachment_url, :class => "img-circle img-responsive" %>
      <% end %>
    </div>
    <div class="info">
      <ul class="dl-horizontal">
        <li>
          <strong>참여중인 강의</strong>
          <div class="text-right">
            <%= @user.courses.count %>
          </div>
        </li>
        <li>
          <strong>진행중인 강의</strong>
          <div class="text-right">
            <%= @user.courses.count %>
          </div>
        </li>
      </ul>

      <% if current_user == @user %>
        <button type="button" id="profile-edit" class="btn btn-default btn-xs">프로필 편집</button>
        <button type="button" id="logout" onclick="location.href='/signout'" class="btn btn-danger btn-xs">
          <p class="ionicons ion-log-out"></p>
        </button>
      <% end %>
    </div>
  </div>
  <div class="photo-list">
    <div class="text-left">
      <h4>참여중인 강의</h4>
    </div>
    <% @user.courses.each do |course| %>
      <div class="photo">
        <%= link_to course_path(course), class: "course-link" do %>
          <div class="img-circle">
            <% if url = course.attachment_url %>
              <%= image_tag url, :class => "img-circle img-responsive", :style => "display: block;" %>
            <% end %>
          </div>
          <div class="text-center">
            <%= course.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="photo-list">
    <div class="text-left">
      <h4>나의 사진</h4>
    </div>
    <% @user.faces.each do |face| %>
      <div class="photo">
        <%= link_to face_path(face), class: "course-link", method: 'delete', data: {confirm: '출석체크에 사용되는 프로필 사진을 삭제합니다.'} do %>
          <div class="img-circle">
            <%= image_tag face.attachment_url, :class => "img-circle img-responsive", :style => "display: block;" %>
          </div>
          <div class="text-center">
            삭제하기
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
