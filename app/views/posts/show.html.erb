<div id="post-title">
  <div class="text-center">
    <h3>
      <%= @course_name %>
    </h3>
  </div>
</div>

<div class="photos">
  <% @post.photos.each do | photo | %>
    <img class="photo" src="<%= photo.attachment %>" />
    <div class="face-grid" data-photo-id="<%= photo.id %>"></div>

    <div class="attendance">
      <label class="col-sm-2 control-label">Attendance</label>
      <div class="tags">
        <% photo.tagged_users.each do | user | %>
          <div class="tag">
            <%= user %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
