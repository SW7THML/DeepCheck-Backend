<div class="navigation-header" align="center">
  <div class="menu menu-left">
    <%= link_to '', :back, class: "ionicons ion-ios-arrow-back" %>
  </div>
  <h1><%= @post_title %></h1>
</div>

<div class="photos">
  <% @post.photos.each do |photo| %>
    <div class="photo">
      <%= image_tag photo.attachment.url, class: 'photo-attachment' %>
      <% photo.tagged_users.each do |tag| %>
        <div class="face-grid" data-photo-id="<%= photo.id %>" id="grid-<%= tag.user_id %>" data-tag-id="<%= tag.id %>" data-x="<%= tag.x %>" data-y="<%= tag.y %>" width="<%= tag.width %>" height="<%= tag.height %>"></div>
      <% end %>
      <div class="face-select" data-photo-id="<%= photo.id %>" data-user-id="<%= @current_user.id %>"></div>
    </div>

    <div class="attendance">
      <div class="tags">
        <% photo.users.each do |user| %>
          <div class="tag" data-user-id="<%= @current_user.id %>">
            <span>
              <div class="name">
                <%= user.name %>
              </div>
            <% if @current_user == user or @current_user.manager?(@course) %>
              <a class="tag-cancel" data-photo-id="<%= photo.id %>" data-user-id="<%= user.id %>" class="tag-delete">
                <span class="ionicons ion-ios-close-outline" aria-hidden="true"></span>
              </a>
            <% end %>
            </span>
          </div>
        <% end %>
      </div>
      <div class="clear"></div>
    </div>
  <% end %>

  <div class="content">
    <%= simple_format(@post.content) %>
  </div>

  <div class="comments">
    <% @post.comments.each do |comment| %>
      <p>
        <strong><%= comment.user.name %></strong>
        <span><%= comment.content %></span>
        <small class="time"><%= time_ago_in_words(comment.created_at) %></small>

        <% if current_user.id == comment.user_id %>
          <%= link_to ' ', [comment.post.course, comment.post, comment], class: "ionicons ion-ios-close-empty", method: :delete, data: { confirm: '댓글을 삭제하시겠습니까?'} %>
        <% end %>
      </p>
    <% end %>
  </div>

  <div class="background-comment">
  <div class="group">
    <%= form_for([@course, @post, @post.comments.build]) do |f| %>
      <%= f.text_field :content, class: "form-control", placeholder: '댓글을 입력해 주세요' %>
      <%= f.submit '등록', class: "btn btn-primary btn-bottom"%>
    <% end %>
  </div>

</div>
