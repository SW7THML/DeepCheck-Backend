<script language="javascript">
	var userAgent = window.navigator.userAgent.toLowerCase(),
	ios = /iphone|ipod|ipad/.test( userAgent );

  function join() {
    var url = "deepcheck://join?course_id=<%= @course.id %>";
    window.location = url;

		var appstore_url = "http://naver.com";
		setTimeout(function() {
			if(ios) {
				window.location = appstore_url;
			}
		}, 25);
  }

	setTimeout(function() {
		if(ios) {
			join();
		}
	}, 25);
</script>

<style type="text/css">
  #info {
    position: fixed;
    top: 50%;
    left: 50%;
  }
  #course {
    width: 200px;
    display: block;
    margin: 0 auto;
    margin-top: -160px;
    margin-left: -90px;
    float: none !important;
    text-align: center;
  }
  #course img {
    width: 180px;
  }
  #course p {
    font-size: 20px;
  }
  .course-name {
    text-align: center;
  }
</style>

